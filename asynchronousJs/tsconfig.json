{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "esm": true,
    "logError": true
  },
  "include": ["src/**/*", "src/*"]
}
